{
    "$schema": "http://json-schema.org/schema#",
    "title": "Context-menu item",
    "description": "A checkbox component's schema definition.",
    "type": "object",
    "id": "context-menu-item",
    "properties": {
        "disabled": {
            "title": "Disabled",
            "type": "boolean"
        },
        "role": {
            "title": "Role",
            "type": "string",
            "default": "menuitem",
            "enum": [
                "menuitem",
                "menuitemradio",
                "menuitemcheckbox"
            ]
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "ids": ["text", "metatext"],
            "defaults": [
                "text"
            ]
        }
    }
}
